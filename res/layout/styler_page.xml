<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="35dp"
            android:text="Styler"
            android:textAlignment="center"
            android:fontFamily="@font/jua"
            style="@style/calender"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/close_btn"/>

    </LinearLayout>

    //app:srcCompat="@drawable/cloth1" 에서 수정함!

    <ImageView
        android:id="@+id/cloth_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/cloth_photo"
        android:src="@drawable/longshirt1" />

    <Button
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="스타일러"
        android:fontFamily="@font/jua"
        android:backgroundTint="#B59073"
        style="@style/search_btn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jsontxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:background="@color/white">

        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/hanger"/>

        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/drawer"/>

        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/calendar"/>

        <ImageButton
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/plusbutton"/>

    </LinearLayout>
</LinearLayout>