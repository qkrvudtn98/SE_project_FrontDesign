<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9ecef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            style="@style/calender"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/jua"
            android:text="AddingCloth"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/cancel_btn"
            android:src="@drawable/cancel_btn"/>

    </LinearLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/기모"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor1"
                        android:text="기모"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@drawable/나일론"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor2"
                        android:text="나일론"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/데님"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor3"
                        android:text="데님"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/린넨"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor4"
                        android:text="린넨"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/면"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor5"
                        android:text="면"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/스웨이드"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor6"
                        android:text="스웨이드"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/아크릴"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor7"
                        android:text="아크릴"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/울"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor8"
                        android:text="울"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/캐시미어"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor9"
                        android:text="캐시미어"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/폴리에스테르"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor10"
                        android:text="폴리"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/기타"
                        android:layout_marginBottom="3dp"/>

                    <CheckBox
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:id="@+id/checkBoxcolor11"
                        android:text="기타"/>

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

    </RadioGroup>


</LinearLayout>
