<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E5E5E5"
    android:orientation="vertical"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="35dp"
            android:text="Ventilation"
            android:textAlignment="center"
            android:fontFamily="@font/jua"
            style="@style/calender"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/close_btn"/>

    </LinearLayout>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:src="@drawable/ventilation"
        android:layout_margin="20dp"
        android:elevation="10dp"
        android:background="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:background="@drawable/rectangle1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="환기시스템 실행"
            android:fontFamily="@font/jua"
            android:textColor="#fff"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="환기시스템을 실행하시겠습니까?"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/windYes"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:backgroundTint="#C7B59073"
                android:text="예"
                android:fontFamily="@font/jua"
                android:layout_marginLeft="85dp"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/windNo"
                android:backgroundTint="#C7B59073"
                android:text="아니요"
                android:fontFamily="@font/jua"
                android:layout_marginLeft="60dp"
                />
//버튼 디자인 적용 x
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/hanger"/>

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/drawer"/>

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginRight="60dp"
                android:src="@drawable/calendar"/>

            <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/plusbutton"/>

        </LinearLayout>
        <!-- 하단 메뉴바 화면에 안보임 -->
    </LinearLayout>
</LinearLayout>